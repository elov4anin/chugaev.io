spriteWidth($sprite) {
  width: $sprite[4];
}

spriteHeight($sprite) {
  height: $sprite[5];
}

spritePosition($sprite) {
  background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
  background-image: url(../img/$sprite[8]);
}

sprite($sprite)
  if !match('hover', selector()) && !match('active', selector())
    spriteImage($sprite)
  spritePosition($sprite)
  spriteWidth($sprite)
  spriteHeight($sprite)


/*mixins*/

clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

wrapper-fluid()
  margin: 0 auto
  width 100%
  /*max-width: 580px!*360*!*/


  text-align: center

  @media (min-width: tablet-widths)

    max-width: 580px

  @media (min-width: desktop-widths)
    max-width: 1160px

