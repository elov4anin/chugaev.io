.contacts
  &__list
    width: 100%
    padding: 0
    display: flex
    flex-wrap wrap

  &__item
    width: 100%
    padding-top 30px
    padding-bottom 30px

    border-bottom: 2px dotted #c6c8cf

    &:nth-child(1)
      box-sizing border-box
      width: 100%
      padding-top: 5px;
      padding-left: 0
    &:nth-child(2)
      box-sizing border-box
      width: 100%
      padding-top: 5px;
      padding-left: 0;

    &:nth-child(4)
      padding-top 20px
      padding-bottom: 20px

  &__btn

    display: block;
    text-decoration: none;
    padding-top: 6px;
    padding-bottom: 6px;
    box-sizing: border-box;

    width: 198px;
    height: 38px;
    margin-top: 20px
    margin-left: 25px;
    margin-top: 22px;
    margin-left: auto
    margin-right: auto


    font-size: 18px;
    font-family: "Roboto";
    color: rgb(74, 133, 197);
    font-weight: 700
    text-transform: uppercase;
    line-height: 1.444;
    text-align: center;

    border-width: 1px;
    border-color: rgb(68, 135, 214);
    border-style: solid;
    border-radius 20px
    background-color: rgb(222, 223, 226);
    box-shadow: 0px 5px 10px 0px rgba(37, 113, 184, 0.15);

    &:hover
      border-width: 1px;
      border-color: rgb(68, 135, 214);
      border-style: solid;
      background-color: rgb(75, 133, 197);
      box-shadow: 0px 5px 15px 0px rgba(37, 113, 184, 0.45);
      color: #dedfe2

    &:active
      background-color: rgb(40, 105, 176);
      box-shadow: 0px 5px 10px 0px rgba(37, 113, 184, 0.15);
      width: 200px;
      height: 40px;
      color: #dedfe2



  &__tel-text
    display: block
    margin-top: 0
    margin-bottom: 0
    font-size: 30px;
    font-family: "Roboto";
    font-weight: 300
    color: rgb(145, 162, 176);
    letter-spacing 0.025em
    line-height: 1;
    text-align: center;

  &__tel-link
    font-size: 36px;
    font-family: "Roboto";
    color: rgb(121, 128, 146);
    line-height: 1.5;
    text-align: center;

    text-decoration: none

    b
      font-weight: 500

.social
  &__list
    display: flex
    justify-content center
    text-align: center
    padding: 0

  &__item
    margin: 13px 13px 0;
    &:hover
      width: 66px;
      height: 64px;
      box-shadow: 0px 5px 15px 0px rgba(37,113,184,0.45);
      border-radius: 50%;
      border-color #4a85c5;




@media (min-width: tablet-widths)
  .contacts

    &__item
      padding-bottom 50px

      &:nth-child(1)

        width: 50%
        padding-top: 35px;
        padding-left: 18px;
        padding-bottom 46px
      &:nth-child(2)

        width: 50%
        padding-top: 31px;
        padding-left: 45px;

      &:nth-child(3)
        padding-top: 34px;
        padding-bottom: 58px

      &:nth-child(4)
        padding-top 40px
        padding-bottom: 27px

    &__tel-text
      margin-top: 23px;
      margin-bottom: 13px;

      line-height: 0.867;

    &__tel-link
      font-size: 56px;
      margin-left: -5px;
      line-height: 1.022;
      letter-spacing: -0.030em;



  .social
    &__item
      margin: 13px 23px 0;
      position: relative

      &:nth-child(1)
        left: -5px;
        top: -8px;

      &:nth-child(2)
        left: -2px;
        top: -8px;

      &:nth-child(3)
        top: -8px;
        left: 0px

      &:nth-child(4)
        top: -8px;
        left: 2px

@media (min-width: desktop-widths)
  .contacts
    &__list
      flex-direction column
      width: 315px
      min-height: 295px
      margin-top: 0;
      margin-bottom: 0;
      padding-left: 8px;
      justify-content flex-start
      align-items: flex-start
      flex-basis 295px

    &__logo
      width: 224px;
      height: auto;
      margin-left: -92px;
      margin-top: -27px;

    &__item
      padding-top 0px
      padding-bottom 0px
      border-bottom: none

      height: 100px

      &:nth-child(1)
        order 1
        width: 100%
        height: 80px


      &:nth-child(2)
        order 4
        width: 100%
        height: 80px



      &:nth-child(3)
        order 2
        height: 36px;/*97*/

      &:nth-child(4)
        order 3
        height: 56px

        padding-top 0
        padding-bottom 0


    &__tel-text
      margin: 0 auto;
      margin-top: -5px;
      margin-left: 5px;
      margin-bottom: 15px;
      font-size: 16px;
      font-weight: 500;
      line-height: 2.625;
      letter-spacing: 0.025em;

    &__tel-link
      margin-left: 45px;
      font-size: 24px;
      line-height: 1em;
      letter-spacing: -0.015em;

    &__btn
      margin-top: 1px;
      margin-left: 28px;

  .social
    &__item
      margin: 0px
      position: relative

      &:hover
        width: 38px;
        height: 36px;

      &:nth-child(1)
        top: 0
        left: 2px

      &:nth-child(2)
        top: 0
        left: 17px
      &:nth-child(3)
        top: 0
        left: 32px
      &:nth-child(4)
        top: 0
        left: 48px

    &__img
      width: 38px
      height: 36px


