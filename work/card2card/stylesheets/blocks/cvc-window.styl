.cvc-window
  box-sizing border-box
  display: none

  position: fixed/*abs*/
  background: #f5f5f5
  z-index 110
  width: 85%
  height 250px/*min-height*/
  padding-top: 85px
  left: 0px/*6*/
  right: 0
  top: 0
  bottom: 0
  margin auto /*0 auto*/
  text-align: center

  &--show
    display: block

  &__img
    position: absolute;
    top: calc(-89px/2);
    right: 0;
    left: 35px;
    width: calc(433px/2);
    height: calc(272px/2);
    margin: 0 auto;


  &__header
    margin-top: 0
    margin-bottom: 0
    padding-left: 24px
    margin-left: -22px

    font-weight: 400
    font-size: 28px;
    font-family: "Roboto";
    color: rgb(90, 97, 118);
    letter-spacing: -0.025em

  &__text
    margin-top: 18px;
    font-size: 16px;
    font-family: "Roboto";
    color: rgba(116, 116, 116, 0.502);
    line-height: 1.2;
    text-align: center;

  &__btn
    position: relative
    right: 0
    left: 1px;
    bottom: -20px;
    width: 280px;
    height: 70px;
    margin: 0 auto
    padding-left: 0

    margin-bottom: 65px

    font-size: 28px;
    font-family: "Roboto";
    color: rgb(255, 255, 255);
    line-height: 1.2;
    text-align: center

    background-color: rgb(251, 182, 1);
    box-shadow: 0 15px 30px 0 rgba(251, 182, 1, 0.4);
    outline none
    border 1px solid transparent;
    border-radius 40px

    cursor pointer

    &:hover
      /*box-shadow: 0 5px 60px 0 rgba(251,182,1,.8);*/
      box-shadow: 0px 15px 60px 0px rgba(251, 182, 1, 0.7);

    &:active
      background-color: rgb(251, 171, 0);
      box-shadow: 0 15px 30px 0 rgba(251, 182, 1, 0.4);

@media (min-width: tablet-widths)
  .cvc-window
    width: 85%
    max-width 700px
    height 440px/*min-height*/
    padding-top: 185px
    left: 6px
    right: 0
    top: 0
    bottom:0

    &__img
      top: -89px;
      right: 0;
      left: 35px;
      width: 100%
      max-width 433px;
      height: auto

    &__header
      font-size: 39.758px;

    &__text
      font-size: 30px;

    &__btn
      position: absolute
      right: 0
      left: 1px;
      bottom: -105px;
      width: 353px;
      height: 80px;
      margin: 0 auto
      padding-left: 0
      margin-bottom: 65px
      font-size: 36px

      &:hover
        box-shadow: 0 25px 30px 0 rgba(251, 182, 1, 0.4);

      &:active
        background-color: rgb(251, 171, 0);
        box-shadow: 0 15px 30px 0 rgba(251, 182, 1, 0.4);

@media  (max-width: 940px) and (orientation: landscape)
/*@media not screen and (min-width: tablet-widths) and (orientation: landscape)*/
  .cvc-window
    transform scale(0.5)

@media (min-width: desktop-widths)
  .cvc-window
    width: 700px