.error-window
  box-sizing border-box
  display: none
  position: fixed
  background: #f5f5f5
  z-index 110
  width: 85%
  height 250px
  padding-top: 85px
  left: 0
  right: 0
  top: 0
  bottom: 0
  margin auto
  text-align: center

  &--show
    display: block

  &__img
    position: absolute
    top: calc(-161px/2)
    right: 0
    left: 2px
    width: calc(370px/2)
    height: calc(294px/2)
    margin: 0 auto


  &__header
    margin-top: 0
    margin-bottom: 0
    font-weight: 400

    font-size: 28px;
    font-family: "Roboto";
    color: rgb(248, 72, 80);
    line-height: 1.2;

  &__text
    margin-top: 19px
    font-size: 16px;
    font-family: "Roboto";
    color: rgba(116, 116, 116, 0.502);
    line-height: 1.2;
    text-align: center;

  &__btn
    position: absolute
    right: 0
    left: -2px
    bottom: -100px
    width: 280px;
    height: 70px;
    margin: 0 auto
    padding-left: 0

    margin-bottom: 65px

    font-size: 28px;
    font-family: "Roboto";
    color: rgb(255, 255, 255);
    line-height: 1.2;
    text-align: center

    background-color: rgb(251, 182, 1);
    box-shadow: 0 15px 30px 0 rgba(251, 182, 1, 0.4);
    outline none
    border 1px solid transparent;
    border-radius 40px

    cursor pointer

    &:hover
      /*box-shadow: 0 5px 60px 0 rgba(251,182,1,.8);*/
      box-shadow: 0px 15px 60px 0px rgba(251, 182, 1, 0.7);

    &:active
      background-color: rgb(251, 171, 0);
      box-shadow: 0 15px 30px 0 rgba(251, 182, 1, 0.4);

@media (min-width: tablet-widths)

  .error-window
    width: 85%
    max-width 700px
    height 400px /*90%*/
    max-height 400px
    padding-top: 170px

    &__img
      position: absolute
      top: -161px
      right: 0
      left: 2px
      width: 100%
      max-width  370px
      height: auto/*294*/
      margin: 0 auto
    &__header
      margin-top: 0
      margin-bottom: 0
      font-weight: 400

      font-size: 39.758px;


    &__text
      margin-top: 19px
      font-size: 30px;



    &__btn

      bottom: -100px
      width: 353px;
      height: 80px;
      font-size: 36px

      &:hover
        box-shadow: 0 25px 30px 0 rgba(251, 182, 1, 0.4);

      &:active
        background-color: rgb(251, 171, 0);
        box-shadow: 0 15px 30px 0 rgba(251, 182, 1, 0.4);

@media  (max-width: 940px) and (orientation: landscape)
  .error-window
    transform scale(0.5)

@media (min-width: desktop-widths)
  .error-window
    left: 9px;
    width: 700px;
