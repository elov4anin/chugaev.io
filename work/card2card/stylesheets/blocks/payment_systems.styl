@media (min-width: desktop-widths)
  .ps
    &__list
      display: flex
      justify-content space-around
      padding: 57px 0;

    &__item

      &--visa
        order 1
        &:before
          margin-top: 37px;
          margin-left: -8px;

      &--mscard
        order 2
        &:before
          margin-left: -2px;
          margin-top: 30px;

      &--mir
        order 3
        &:before
          margin-left: -40px;
          margin-top: 40px;

      &--verified-visa
        order 4
        &:before
          margin-left: -24px;
          margin-top: 33px;


      &--mscard-sc
          order 5
          &:before
            margin-left: -21px;
            margin-top: 30px;

      &--mir-accept
        order 6
        &:before
          margin-left: 13px;

      &--pci-dss
        order 7
        &:before
          margin-left: 35px;
          margin-top: 33px;

          background-size: auto 45px;


@media (min-width:615px) and (max-width:638px)
  .ps
    &__item
      width: 125px


@media (max-width:554px)
  .ps
    &__list
      padding: 0
      padding-right: 20px

    &__item
      width: 115px
      transform scale(0.7)

@media (max-width:494px)
  .ps
    &__item
      height: 90px

      &--mscard-sc
        &:before
          margin-left: 0
          transform scale(0.9)
      &--mir
        &:before
          margin-left: 10px

      &--mir-accept
        &:before
          margin-left: 10px

      &--pci-dss
        &:before
          margin-left: 10px

@media all and (-webkit-min-device-pixel-ratio: 1.5)
  .ps

    &__item
      width: 115px
      transform scale(1)
      &:before
