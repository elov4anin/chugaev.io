.ps
  background-color: #ededef //@todo переделать в свг спрайт



  &__wrapper
    wrapper-fluid();
    overflow hidden




  &__list
    padding 33px 20px
    font-size: 0


  &__item
    position: relative
    width: 135px



    display: inline-block
    vertical-align top

    height: 105px
    /*margin-right: 15px*/

    &:before
      content: "";
      position: absolute;
      top: 0;
      left: -8px;
      right: 0;
      bottom: 0;

      margin: auto;


      /*filter: gray;
      filter: grayscale(100%)  ;*/
      opacity 0.5

      background-repeat: no-repeat;



    &--visa
      &:before
        width: 120px;
        height: 45px;
        margin-top: 29px;
        margin-left: -5px;
        background-image url(../img/png-sprite/icon-visa.png);
        background-image: url(../img/pay-system/visa.svg), none;
        background-size 115px 45px
        background-position: 0px 0px;/* 2px -33px*/

    &--verified-visa
      &:before
        left: -10px;
        top: -4px;
        width: 120px;
        height: 52px;

        background-image url(../img/png-sprite/icon-virified-visa.png);

        background-image: url(../img/pay-system/visa-verified.svg), none;
        background-size 110px 47px
        background-position: 0px 0px;
        /*background-position: 2px -164px;*/

    &--mscard
      &:before
        width: 77px;
        height: 60px;


        margin-top: 25px
        margin-left: 43px

        background-image url(../img/png-sprite/icon-mscard.png);
        background-image: url(../img/pay-system/mscard.svg), none;
        background-size auto 50px

        background-position: 0px 0px;

       /* background-position: 0px -216px;*/

    &--mscard-sc
      &:before
        width: 170px;
        height: 60px;
        margin-top: 24px;
        margin-left: 17px;
        background-image url(../img/png-sprite/icon-mscard-securecode.png);
        background-image: url(../img/pay-system/mscard-sc.svg), none;
        background-size auto 50px

        background-position: 0px 0px;
        /*background-position: 1px -114px;*/

    &--mir
      &:before

        width: 116px;
        height: 35px;
        margin-left: -26px;
        margin-top: 37px;

        background-image url(../img/png-sprite/icon-mir.png);
        background-image: url(../img/pay-system/mir.svg), none;
        background-size auto 32px

        background-position: 0px 0px;

        /*background-position: 1px 1px;*/

    &--mir-accept
      &:before
        width: 160px;
        height: 65px;
        margin-top: 23px
        margin-left: 5px

        background-image url(../img/png-sprite/icon-mir-accept.png);
        background-image: url(../img/pay-system/mir-accept.svg), none;
        background-size auto 57px

        background-position: 0px 0px;

        /*background-position: 0px -320px;*/

    &--pci-dss
      &:before

        width: 247px;
        height: 95px;
        margin-top: 29px
        margin-left: 45px

        background-image  url(../img/png-sprite/icon-pci-dss.png);
        background-image: url(../img/pay-system/pci-dss.svg), none;
        background-size auto 50px

        background-position: 0px 0px;
       /* background-position: 0 -266px;*/


