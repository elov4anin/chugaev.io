.footer-apps
  margin-top:0
  margin-top: 39px;
  position: relative;
  /*background-color: #dedfe2*/

  &:before
    content ""
    position: absolute
    left: 0
    right: 0
    top: -28px;

    width: 100%
    height: 0

    border-bottom: 1px solid rgb(198, 200, 207)
  &__header
    margin-bottom: 35px
    font-size: 28px;
    font-family: "Roboto";
    color: rgb(74, 133, 197);
    font-weight: bold;
    text-transform: uppercase;
    line-height: 0.929;
    text-align: center;

  &__list
    margin: 0 auto
    margin-bottom: 12px
    padding-left: 0

    position: relative
    font-size: 0

    &:before
      content ""
      top: 0
      right: 0
      left: 0
      margin: 0 auto
      width: 100%;
      height: 52px
      position: absolute
      /* IE10+ */
      background-image: -ms-radial-gradient(center top, ellipse farthest-corner, rgba(204, 206, 211, 1) 0%, rgba(222, 223, 226, 1) 40%);

      /* Mozilla Firefox */
      background-image: -moz-radial-gradient(center top, ellipse farthest-corner, rgba(204, 206, 211, 1) 0%, rgba(222, 223, 226, 1) 40%);

      /* Opera */
      background-image: -o-radial-gradient(center top, ellipse farthest-corner, rgba(204, 206, 211, 1) 0%, rgba(222, 223, 226, 1) 40%);

      /* Webkit (Safari/Chrome 10) */
      background-image: -webkit-gradient(radial, center top, 0, center top, 325, color-stop(0, rgba(204, 206, 211, 1)), color-stop(40, rgba(222, 223, 226, 1)));

      /* Webkit (Chrome 11+) */
      background-image: -webkit-radial-gradient(center top, ellipse farthest-corner, rgba(204, 206, 211, 1) 0%, rgba(222, 223, 226, 1) 40%);

      /* W3C Markup */
      background-image: radial-gradient(ellipse farthest-corner at center top, rgba(204, 206, 211, 1) 0%, rgba(222, 223, 226, 1) 40%);

    &:after
      content ""
      position: absolute
      top: -1px
      right: 0
      left: 0
      width: 0;
      height: 0;
      margin: 0 auto
      border-style: solid;
      border-width: 10px 10px 0 10px;
      border-color: #dedfe2 transparent transparent transparent;

  &__item
    display: inline-block
    vertical-align: top
    width: 50%
    margin: 0 auto
    padding-top: 55px
    padding-bottom: 63px

    border-bottom: 2px dotted #c6c8cf;

    &:nth-child(1)
      position: relative

      &:before
        content ""
        position: absolute
        right: 0
        top: 35px

        height: 95px
        width: 2px

        background-image: url("../img/apps-line.png");
        background-repeat:no-repeat
        /*border-right: 2px solid #c6c8cf;*/

    &:nth-child(2)
      position: relative

      img
        margin-left: 18px

  &__img
    display: none

  &__shop-img
    width: 80%
    height:auto


.footer-apps__link
  margin-left: -15px
&__img
  display: none

&__shop-img
  width: auto
  height:48px

