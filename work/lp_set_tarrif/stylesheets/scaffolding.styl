*
  box-sizing: border-box;

html
  height: 100%

body
  height: 100%
  margin: 0 auto
  font-family: Roboto;
  font-style: normal;
  font-size: 100%;

button
  font-family: Roboto;
  cursor pointer

button:active
  outline: none;

button:focus

  outline: none;

button::-moz-focus-inner
  border: 0;

ul
  padding-left: 0
  list-style-type none

.container-fluid
  clearfix()
  width: 100%
  height: 100%


.visually-hidden
  position: absolute;

  width: 1px;
  height: 1px;
  margin: -1px;
  padding: 0;

  border: 0;
  clip: rect(0, 0, 0, 0);
  overflow: hidden;

@media screen and (max-width: $desktopWidth)
  .container-fluid
    display: flex
    flex-direction column
    height: auto
    min-height: 100%