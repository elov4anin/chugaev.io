@media screen and (max-width: $desktopWidth)
  .sidebar
    display: flex
    justify-content space-between
    position: relative
    width: 100%
    min-height: 90px
    padding-top: 10px

    &--open
      .nav__list
        display: block

      .nav__toggle
        top: 15px;
        right: 25px;
        left: auto;

        &::before,
        &::after
          content: ' ';
          position: absolute;
          top: 24px;
          left: 15px;

          width: 25px;
          height: 3px;

          background-color: #348BED;

        &:before
          transform: rotate(45deg);
          box-shadow: none;

        &:after
          transform: rotate(-45deg);


@media screen and (max-width: $mobileWidth)
  .sidebar
    min-height: 65px
    .nav__toggle
      top: 0px;
      right: 10px;

