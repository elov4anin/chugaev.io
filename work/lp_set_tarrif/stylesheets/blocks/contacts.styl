@media screen and (max-width: $desktopWidth)
  .contacts
    &__item
      padding-top 40px
      padding-bottom: 30px

      &:nth-child(1)
        &:before
          left: 0
          right: 0
          width: 74%
          margin: 0 auto

      &:nth-child(2)
        padding-top 20px
        padding-bottom: 40px

    &__tel-text
      font-size: 22px;


@media screen and (max-width: $mobileWidth)
  .contacts
    &__item:nth-child(2)
      padding-bottom: 35px

    &__tel-text
      width: 250px
      margin-right: auto
      margin-left: auto

  .social

    &__link
      .social__img
        width: 40px
        height: auto