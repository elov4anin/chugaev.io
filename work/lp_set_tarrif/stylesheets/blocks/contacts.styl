.contacts
  &__list
    margin-top: 0
    margin-bottom: 0
    width: 100%
    padding-left: 0
    display: flex
    flex-wrap wrap
    border: 1px solid rgba(146, 161, 176, 0.25)
    border-right:none
    border-left:none

  &__item
    width: 100%
    padding-top 20px
    padding-top: 2vh

    padding-bottom 20px
    padding-bottom: 2vh
    box-sizing border-box

    &:nth-child(1)
      position: relative
      background: linear-gradient(180deg, #F0F0F0 0%, rgba(240, 240, 240, 0) 100%);

      &:before
        bottom: 2px
        left $lgSidebarPaddingLeft - 4
        position: absolute
        content ""
        width: 80%
        height: 1px
        border-bottom: 2px dotted #c6c8cf

    &:nth-child(2)
      padding-top:11px
      padding-top:0.9vh

      padding-bottom: 20px
      padding-bottom: 2vh
      border-bottom: none
      background rgba(240, 240, 240, 0)

  &__tel-text
    display: block
    margin-bottom: 17px
    margin-bottom:1.4vh



    font-weight: normal;
    line-height: normal;
    font-size: 24px;
    font-size: 2.53vh
    letter-spacing: -0.02em;
    color: #4C85C5;
    text-align: center

  &__tel-link
    display: block
    margin: 0 auto

    /*padding-left: 6px*/

    color: rgb(121, 128, 146);
    font-weight: normal;
    line-height: normal;
    font-size: 28px;

    letter-spacing: -0.02em;
    text-decoration: none
    text-align: center

    b
      font-weight: 500
      color: #5A6176;

.social
  &__list
    display: flex
    justify-content center

    padding: 0

  &__item
    margin: 13px 13px 0;
    margin: 1.37vh 1.37vh 0;

  &__link
    .social__img
      display: block
      width: 4.21vh
      height: auto
    .social__img--hover
        display: none
        width: 4.21vh
        height: auto

  &__link:hover
    .social__img
      display: none
    .social__img--hover
      display: block

