.options
  &__list
    display: flex
    flex-wrap wrap

  &__item
    position: relative

    width: 320px
    min-height 320px
    background: #F2F7FB;
    border-radius: 12px;
    margin: 10px
    padding: 20px
    
    text-align: left

    &:nth-child(1)
      margin-top: 0
      margin-left: 0

    &:nth-child(2)
      margin-top: 0

    &:nth-child(3)
      margin-top: 0
      margin-right: 0

    &:nth-child(4)
      margin-bottom: 0
      margin-left: 0

    &:nth-child(5)
      margin-bottom: 0

    &:nth-child(6)
      margin-bottom: 0
      margin-right: 0

    &:before
      position: absolute
      content ""

      top: 45px
      right: 30px
      background-repeat:no-repeat

    &--button
      &:before
        width: 64px
        height: 55px

        background-image: url("../images/icons_button.svg");

    &--site
      &:before
        width: 74px
        height: 65px

        background-image: url("../images/icons_site.svg");

    &--phone
      &:before
        width: 66px
        height: 66px
        background-image: url("../images/icons_phone.svg");

    &--integration
      &:before
        width: 74px
        height: 74px
        background-image: url("../images/icons_integration.svg");

    &--support
      &:before
        width: 73px
        height: 74px
        background-image: url("../images/icons_support.svg");

    &--fixal
      &:before
        width: 82px
        height: 73px
        background-image: url("../images/icons_fixal.svg");


  &__header
    margin-top: 80px
    margin-bottom: 0;

    font-family: Roboto;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    font-size: 24px;
    letter-spacing: -0.02em;

    color: #5A6176;

  &__text
    font-family: Roboto;
    font-style: normal;
    font-weight: normal;
    line-height: normal;
    font-size: 16px;
    letter-spacing: -0.02em;

    color: #5A6176;

  &__link
    color: #348BED;

    &:hover
      color #348BED


    &:active
      color lighten(#5A6176, 30%)


  &__count
    font-family: Roboto;
    font-style: normal;
    font-weight: 500;
    line-height: 42px;
    font-size: 24px;
    letter-spacing: -0.02em;

    color: #348BED;

@media screen and (max-width: $desktopWidth17)
  .options
    &__item
      width: 350px
      min-height: 350px

      &:nth-child(3)
        margin-left: 0
        margin-top: 10px
        margin-right: 20px

      &:nth-child(4)

        margin-bottom: 10px;


      &:nth-child(5)
        margin-left: 0
        margin-bottom: 0;

@media screen and (max-width: $tabletWidth)
  .options
    &__list
      justify-content center
    &__item
      margin-right: auto!important
      margin-left: auto!important
      margin-top: 10px!important
      margin-bottom: 10px!important

@media screen and (max-width: $mobileWidth)
  .options
    &__list
      margin-top: 35px;
    &__item
      box-shadow: 0px -11px 35px 0px rgba(196,196,196,.7);
      transition all 0.5s ease-in-out 0.1s
      margin-right: auto!important
      margin-left: auto!important
      margin-bottom: 0!important
      margin-top: 0!important

    &__item--hidden
      height: 120px
      min-height: auto
      overflow-y hidden

      margin-top: 0!important
      margin-bottom: 0!important
      cursor pointer

      /*&:before
        top: 20px;
        right: 15px;*/

      .options__header
        margin-top: 0px

        width: 70%

