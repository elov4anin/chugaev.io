.calc
  background: #F2F7FB;
  border-radius: 12px;
  margin-top: 30px
  margin-bottom: 30px
  min-height:615px

  &__comission
    display: flex
    background #E5EFF7;
    border-top-left-radius 12px
    border-top-right-radius 12px

    &-btn
      width: 50%
      padding-top: 45px
      padding-bottom: 40px

      background: #E5EFF7
      border none
      outline none
      border-top-left-radius 12px
      border-top-right-radius 12px

      font-weight: 500;
      line-height: normal;
      font-size: 26px;
      text-align: center;
      letter-spacing: -0.02em;
      color: #92A1B0
      transition font-weight 0.7s ease-in 0.1s

      br
        display: none


      &:hover
        color darken(#92A1B0, 30%)

      &:active
        color lighten(#92A1B0, 30%)


      &:nth-child(1)
        font-size: 28px
        padding-left: 8px

      &:nth-child(2)
        padding-left: 0

      &--active
        background #F2F7FB;
        font-weight: 500;
        color #5A6176

  &__type
    &-list
      display: flex
      justify-content space-between
      border-bottom: 1px solid #BCCBD6

    &-item
      width: 31%
      text-align: center

      &:nth-child(2)
        padding-left: 23px

        .calc__type-btn--active
          &:before
            left: 4px
            right: 0
            width: 242px

      &:nth-child(3)
        .calc__type-btn--active
          &:before
            left: 90px
            right: 0
            width: 72px

      &:nth-child(3)
        position: relative
        left: -35px

    &-btn
      width 250px
      padding-top: 34px
      padding-bottom: 16px

      font-weight: 400;
      line-height: normal;
      font-size: 24px;
      letter-spacing: 0.01em;
      background-color: transparent
      color: #5A6176;

      border none
      outline none

      &--active
        position: relative
        color: #5A6176
        font-weight: 500
        outline none
        &:before
          position: absolute
          content: ' '
          bottom: -3px
          left: 20px
          right: 0

          width: 210px;
          height: 5px;
          background: linear-gradient(269.18deg, #FBB601 0%, #F2994A 99.99%);
          border-radius: 20px;

      &:hover
        color lighten(#5A6176, 30%)

      &:active
        color darken(#5A6176, 30%)

  &__calculation
    display: flex
    padding-top: 22px

    &-panel
      position: relative
      width: 69%
      padding-left: 40px
      padding-right: 50px

      *
        opacity 1

      &:after
        position: absolute
        content: ''
        right: 5px
        top: -14px
        bottom: 0
        width: 1px;
        height: 357px;
        background: transparent
        border-right: 2px dotted #CAD6DF

      &--hidden
        *
          opacity 0

        .range__count
          opacity 0

    &-result
      width: 30%


@media screen and (max-width: $desktopWidth17)
  .calc
    width: 728px;
    margin-right: auto
    margin-left: auto

    &__comission
      &-btn
        font-size: 24px

        &:nth-child(1)
          font-size: 24px
          letter-spacing: -0.05em;


    &__calculation
      flex-wrap wrap
      &-panel
        position: relative
        width: 100%


        &:after

          right:0;
          left: 0
          top: auto;
          bottom: 0;
          width: 100%;
          height: 1px;
          background: transparent;
          border-bottom: 2px dotted #cad6df;

      &-result
        width: 100%

@media screen and (max-width: $tabletWidth)
  .calc
    width: 100%
    min-width: 480px
    &__comission
      &-btn
        font-size: 22px

        &:nth-child(1)
          font-size: 22px
          letter-spacing: -0.05em;

    &__type
      &-wrap
        position: relative
        overflow hidden

      &-list
        position: relative
        left: 0

        &--ishop
          left: -230px
        &--taxi
          left: -420px

      &-item
        position: relative

        &:nth-child(1)
          position: relative
          left: 0px
          padding-left: 10px

          .calc__type-btn--active
            &:before
              left: 0px
              width: 150px

          .calc__type-btn
            width: 150px

        &:nth-child(2)
          position: relative
          left: 0

          .calc__type-btn--active
            &:before
              left: 0
              width: 173px

          .calc__type-btn
            width: 169px

        &:nth-child(3)
          position: relative
          left: 0px

          .calc__type-btn--active
            &:before
              left: 10px
              width:50px

          .calc__type-btn
            width: 72px

      &-btn
        width: 169px
        font-size: 16px

        &--active
          font-size: 16px

@media screen and (max-width: $mobileWidth)
  .calc

    min-width 310px

    &__comission
      &-btn
        font-size: 14px
        padding-top: 15px
        padding-bottom: 20px

        br
          display: inline

        &:nth-child(1)
          font-size: 14px
          letter-spacing: -0.05em;

    &__type
      &-item
        &:nth-child(1)
          position: relative
          left: 0px
          padding-left: 0

          .calc__type-btn--active
            &:before
              left: 5px
              width: 110px

          .calc__type-btn
            width: 120px

        &:nth-child(2)
          position: relative
          left: 10px
          padding-left: 0px

          .calc__type-btn--active
            &:before
              left: 0
              width: 133px

          .calc__type-btn
            width: 133px

        &:nth-child(3)
          position: relative
          left: 10px

          .calc__type-btn--active
            &:before
              left: 5px
              width:40px

          .calc__type-btn
            width: 40px

      &-btn
        font-size: 14px
        letter-spacing: -0.05em
        padding-top: 1px;

    &__calculation
      padding-top: 5px;
      &-panel
        position: relative
        width: 100%
        padding-left: 10px
        padding-right: 10px
