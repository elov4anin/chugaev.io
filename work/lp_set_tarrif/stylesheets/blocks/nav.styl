@media screen and (max-width: $desktopWidth)
  .nav
    position: relative
    display: flex
    flex-direction row
    &__toggle
      position: relative;
      top: 15px;
      right: 25px;

      z-index: 1;
      display: block;
      width: 44px;
      height: 50px;
      font-size: 0;
      background: transparent;
      cursor: pointer;
      border: none;

      &:before
        content: " ";
        position: absolute;
        top: 15px;
        left: 15px;
        width: 25px;
        height: 3px;
        background-color: #348bed;
        box-shadow: 0 7px 0 0 #348bed, 0 14px 0 0 #348bed;

    &__list
          position: absolute
          z-index 100
          top: 85px
          display: none
          width: 100%
          background: linear-gradient(161.27deg, #f5f5f5 0%, #fff 100%);

