.page
  position: absolute
  left: $lgSidebarWidth

  top: 0
  bottom: 0

  width: 74%

  padding-top 0
  min-width 1040px
  min-height: 100%

  text-align: center


  &--pays
    z-index 9


  &__wrapper
    position: relative
    width: 72%
    width 1000px
    margin: 0 auto

  &__header
    margin-bottom: 5px;

    text-align: left
    color: #5A6176;
    font-family: Roboto;
    font-style: normal;
    font-weight: 500;
    line-height: 51px;
    font-size: 48px;
    letter-spacing: -0.02em;

  &__btn
    position: fixed
    bottom: -150px
    bottom: 30px
    left:110px
    right: 0
    z-index 10

    display: block
    width: 300px
    padding: 15px
    margin: 0 auto

    outline none
    border 0

    background: linear-gradient(261.47deg, #FBB601 0%, #F2994A 99.27%);
    border-radius: 30px;

    font-family: Roboto;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    font-size: 24px;
    text-align: center;
    letter-spacing: -0.02em;
    text-decoration: none
    transition: all .2s ease-in-out;

    color: #FFFFFF;

    box-shadow: 0 5px 30px 0 rgba(251,182,1,.4)

    &:hover
      /*background: linear-gradient(260.71deg, rgba(251, 182, 1, 0.3) 0%, rgba(242, 153, 74, 0.3) 99.14%);*/
      box-shadow: 0 15px 25px 0  rgba(242, 153, 74, 0.3);
      transform scale(1.05)

