@media screen and (min-height: 800px) and (max-height: 900px) and (min-width: $desktopWidth )
  .page
    &__btn
      position: absolute
      bottom: -70px



@media screen and (min-width: $desktopWidth17) and  (max-width: $desktopWidth)
  .page
    min-width: 1008px
    &__wrapper
      margin-left: 5px

    /*&__header
      margin-left: 40px*/


@media screen and (max-width: $desktopWidth)
  .page
    position: relative
    left: auto
    top: auto
    bottom: auto
    margin: 0 auto

    &__header
      font-size: 36px

    &__btn
      position: relative
      left: auto
      right: auto
      bottom auto
      top: auto
      margin: 70px auto

